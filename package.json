{
  "name": "colemakcamp",
  "version": "1.0.0",
  "description": "A fork of Colemak Club that overhauls the entire experience. Brings support for custom themes and a wider range of display sizes.",
  "private": true,
  "scripts": {
    "build": "npm-run-all clean build:*",
    "build:sass": "sass styles/:styles/ --no-source-map",
    "build:css": "npm run minify:css",
    "build:js": "npm run minify:js",
    "minify:css": "node tools/build-css.js",
    "minify:js": "node tools/build-js.js",
    "watch": "npm-run-all --parallel watch:*",
    "watch:sass": "sass styles/:styles/ --no-source-map --watch",
    "watch:css": "chokidar 'styles/*.css' '!styles/*.min.css' -c 'npm run minify:css'",
    "watch:js": "chokidar 'scripts/*.js' 'lib/*.js' '!**/*.min.js' -c 'npm run minify:js'",
    "clean": "echo 'Build output will be overwritten'",
    "dev": "npm run watch"
  },
  "devDependencies": {
    "sass": "^1.83.4",
    "terser": "^5.37.0",
    "clean-css-cli": "^5.6.3",
    "npm-run-all": "^4.1.5",
    "chokidar-cli": "^3.0.0"
  },
  "keywords": [
    "colemak",
    "typing",
    "trainer"
  ],
  "license": "AGPL-3.0-only"
}
